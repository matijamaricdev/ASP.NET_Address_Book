@page
@model LoginModel

<div class="row">
    <div class="col-md-4 mx-auto">
        <section>
            <form id="account" method="post">
                <h4 style="text-align: center;">Ulogiraj se u svoj račun</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    Lozinka
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Ulogiraj se</button>
                </div>
                <div class="form-group" style="text-align: center;">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Zaboravili ste lozinku?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registriraj se kao novi korisnik</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
